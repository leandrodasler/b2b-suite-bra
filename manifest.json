{
  "vendor": "ssesandbox04",
  "name": "b2b-suite-bra",
  "version": "1.0.0",
  "title": "B2B Suite Brasil",
  "description": "Provides blocks for B2B facilities in the storefront",
  "scripts": {
    "postreleasy": "vtex publish"
  },
  "builders": {
    "react": "3.x",
    "node": "6.x",
    "messages": "1.x",
    "docs": "0.x",
    "store": "0.x"
  },
  "dependencies": {
    "vtex.store": "2.x",
    "vtex.store-graphql": "2.x",
    "vtex.apps-graphql": "2.x",
    "vtex.store-icons": "0.x",
    "vtex.device-detector": "0.x",
    "vtex.responsive-values": "0.x",
    "vtex.product-context": "0.x",
    "vtex.product-quantity": "1.x",
    "vtex.css-handles": "0.x",
    "vtex.store-components": "3.x",
    "vtex.flex-layout": "0.x",
    "vtex.store-resources": "0.x",
    "vtex.styleguide": "9.x",
    "vtex.order-manager": "0.x",
    "vtex.checkout-resources": "0.x",
    "vtex.pixel-manager": "1.x",
    "vtex.format-currency": "0.x",
    "vtex.overlay-layout": "0.x",
    "vtex.b2b-organizations-graphql": "0.x",
    "vtex.storefront-permissions": "1.x",
    "vtex.store-image": "0.x"
  },
  "registries": [
    "smartcheckout"
  ],
  "policies": [
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "POWER_USER_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/{{account}}/pricing/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/profile-system/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "kubernetes.default.svc.cluster.local",
        "path": "*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "infra.io.vtex.com",
        "path": "*"
      }
    },
    {
      "name": "Sku.aspx"
    },
    {
      "name": "read_prices"
    },
    {
      "name": "ADMIN_CRM"
    },
    {
      "name": "POWER_USER_CRM"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "*",
        "path": "*"
      }
    },
    {
      "name": "graphql-query"
    },
    {
      "name": "vbase-read-write"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "b2bgoals--{{account}}.myvtex.com",
        "path": "/_v/b2b-sales-representative-quotes/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.myvtex.com",
        "path": "/_v/private/b2b/oms/user/orders/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.myvtex.com",
        "path": "/api/oms/pvt/orders/*"
      }
    }
  ],
  "settingsSchema": {
    "title": "VTEX API Settings",
    "type": "object",
    "properties": {
      "X-VTEX-API-AppKey": {
        "type": "string"
      },
      "X-VTEX-API-AppToken": {
        "type": "string"
      }
    }
  },
  "billingOptions": {
    "type": "free",
    "availableCountries": [
      "*"
    ]
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
